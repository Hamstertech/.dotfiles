            //         "foreground": "#76687d"
            //     }
            // },
            // {
            //     "scope": "meta.other.type.phpdoc.php,comment.block.documentation.phpdoc.php",
            //     "settings": {
            //         "foreground": "#5c6370"
            //     }
            // },
            // {
            //     "scope": "meta.other.type.phpdoc.php support.class.php",
            //     "settings": {
            //         "foreground": "#5c6370"
            //     }
            // },
            // {
            //     "scope": "meta.other.type.phpdoc.php support.class.builtin.php",
            //     "settings": {
            //         "foreground": "#5c6370"
            //     }
            // },
        ]
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "intelephense.telemetry.enabled": false,
    "intelephense.environment.phpVersion": "8.2.8",
    // "intelephense.completion.triggerParameterHints": true,
    // "intelephense.completion.insertUseDeclaration": true,
    // "intelephense.diagnostics.undefinedClassConstants": false,
    // "intelephense.diagnostics.undefinedFunctions": false,
    // "intelephense.diagnostics.undefinedConstants": false,
    // "intelephense.diagnostics.undefinedProperties": false,
    // "intelephense.diagnostics.undefinedTypes": false,
    // "intelephense.diagnostics.undefinedMethods": false,
    "telemetry.telemetryLevel": "off",
    "gitlens.telemetry.enabled": false,
    "extensions.ignoreRecommendations": true,
    "code-runner.enableAppInsights": false,
    // Misc.
    "css.validate": false,
    "tailwindCSS.emmetCompletions": true,
    "js/ts.implicitProjectConfig.checkJs": true,
    "settingsSync.keybindingsPerPlatform": false,
    "sync.gist": "f9d03eb2c801b62867767e9f17f0f970",
    // "files.exclude": {
    //     "**/.github": true,
    //     "**/.husky": true,
    //     "**/.idea": true,
